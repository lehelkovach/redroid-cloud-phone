[Unit]
Description=FFmpeg RTMP to Virtual Devices Bridge
Documentation=https://ffmpeg.org
After=nginx-rtmp.service
Wants=nginx-rtmp.service

[Service]
Type=simple
ExecStart=/opt/redroid-scripts/ffmpeg-bridge.sh
Restart=always
RestartSec=5

# Run as root to access /dev/video42
User=root

# Resource limits
CPUQuota=50%
MemoryMax=512M

[Install]
WantedBy=redroid-cloud-phone.target
WantedBy=redroid-cloud-phone.target
