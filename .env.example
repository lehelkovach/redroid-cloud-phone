# Cloud Phone Environment Variables
# Copy to .env and customize

# =============================================================================
# OCI (Oracle Cloud Infrastructure) Settings
# =============================================================================

# OCI Compartment OCID (required for deployment)
COMPARTMENT_ID=ocid1.compartment.oc1..example

# OCI Subnet OCID (required for deployment)
SUBNET_ID=ocid1.subnet.oc1..example

# OCI Availability Domain
AVAILABILITY_DOMAIN=AD-1

# =============================================================================
# SSH Configuration
# =============================================================================

# SSH private key for remote access
SSH_KEY_FILE=~/.ssh/redroid_oci

# SSH user for remote connections
SSH_USER=ubuntu

# =============================================================================
# Connection Settings
# =============================================================================

# ADB connection string (host:port)
ADB_CONNECT=127.0.0.1:5555

# Remote VM IP address (set when working with remote instance)
VM_HOST=

# API URL (for tests and CLI)
API_URL=http://localhost:8080

# =============================================================================
# API Authentication
# =============================================================================

# API token for authenticated requests
API_TOKEN=

# =============================================================================
# Logging Configuration
# =============================================================================

# Log directory
CLOUD_PHONE_LOG_DIR=/var/log/cloud-phone

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
CLOUD_PHONE_LOG_LEVEL=INFO

# =============================================================================
# Configuration File
# =============================================================================

# Path to JSON config file (optional, overrides defaults)
CLOUD_PHONE_CONFIG=

# Installation directory
CLOUD_PHONE_HOME=/opt/cloud-phone

# =============================================================================
# Proxy Configuration (optional)
# =============================================================================

# Proxy type (http, socks5, transparent)
PROXY_TYPE=socks5

# Proxy host and port
PROXY_HOST=
PROXY_PORT=1080

# Proxy authentication (optional)
PROXY_USER=
PROXY_PASS=

# =============================================================================
# GPS Spoofing (optional)
# =============================================================================

# GPS coordinates (decimal)
GPS_LAT=37.7749
GPS_LON=-122.4194

# =============================================================================
# Redroid Settings
# =============================================================================

# Redroid Docker image
REDROID_IMAGE=redroid/redroid:11.0.0-latest

# Screen resolution
REDROID_WIDTH=1280
REDROID_HEIGHT=720
REDROID_FPS=30
REDROID_DPI=240

# GPU mode (guest, host, auto)
REDROID_GPU_MODE=guest

# VNC settings
VNC_PORT=5900
VNC_PASSWORD=redroid

# ADB port
ADB_PORT=5555

# =============================================================================
# RTMP Streaming
# =============================================================================

# RTMP server URL for OBS
RTMP_URL=rtmp://127.0.0.1/live/cam

# Stream key
RTMP_STREAM_KEY=cam

# =============================================================================
# Test Configuration
# =============================================================================

# Test timeout in seconds
TEST_TIMEOUT=300

# Number of test retries
TEST_RETRY_COUNT=2
